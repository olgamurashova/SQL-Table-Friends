* Selecting two columns of the table:

SELECT name, genre
FROM movies;

*Selecting all columns of the table:
SELECT name, genre, year
FROM movies;

or

SELECT * FROM movies;

*Renaming a column using AS keyword

SELECT name AS 'title'
FROM movies;

SELECT imdb_rating AS 'IMDb'
FROM movies;

*Returning unique values from the output using DISTINCT keyword

SELECT DISTINCT genre
FROM movies;
SELECT DISTINCT year
FROM movies;

*Filtering specific information using WHERE clause

SELECT *
FROM movies 
WHERE imdb_rating < 5;
SELECT *
FROM movies 
WHERE year > 2014;

*Comparing similar values using LIKE operator

SELECT * 
FROM movies
WHERE name LIKE 'Se_en';

*Filtering the results that only include movies with names that beging with the letter 'A' and containg 'man' using LIKE and % wildcard character

SELECT * 
FROM movies
WHERE name LIKE 'A%';
SELECT * 
FROM movies 
WHERE name LIKE '%man%';

*Filtering for all movies that have rating

SELECT name
FROM movies 
WHERE imdb_rating IS NOT NULL;

*Filtering for the movies that have no rating

SELECT name
FROM movies
WHERE imdb_rating IS NULL;

*Filtering the result to include movies with years between 1990 and 1999

SELECT *
FROM movies
WHERE year BETWEEN 1990 AND 1999;

*Filtering the result to only include movies with the names that beging with the letter 'A' up to not including 'J'.

SELECT *
FROM movies
WHERE name BETWEEN 'A' AND 'J';

*Combining multiple conditions

SELECT * 
FROM movies
WHERE year BETWEEN 1990 AND 1999
   AND genre = 'romance';
   
SELECT *
FROM movies
WHERE year BETWEEN 1970 AND 1979
  AND imdb_rating > 8;
  
SELECT *
FROM movies
WHERE year < 1985
AND genre = 'horror';

*Combining multiple conditions using OR

SELECT *
FROM movies
WHERE year > 2014
   OR genre = 'action';

SELECT *
FROM movies
WHERE genre = 'romance'
OR genre = 'comedy';

*Sorting everything by movies title from A to Z

SELECT *
FROM movies
ORDER BY name;
SELECT name, year
FROM movies
ORDER BY name;

*Sorting things in a decreasing/descending order

SELECT *
FROM movies
WHERE imdb_rating > 8
ORDER BY year DESC;

SELECT name, year, imdb_rating
FROM movies
ORDER BY imdb_rating DESC;

*Specifying the maximum number of rows using LIMIT clause

SELECT *
FROM movies
LIMIT 10;

SELECT *
FROM movies
ORDER BY imdb_rating DESC
LIMIT 3;
