//creating table 
CREATE TABLE friends (
  id INTEGER
  name TEXT
  birthday DATE
);

//inserting a new row into the table
INSERT INTO friends (id, name, birthday)
VALUES (1, 'Ororo Munroe', '1940-05-30');

//checking if the table has been created 
SELECT * 
FROM friends;

//inserting more rows
